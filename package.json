{
  "name": "morphel",
  "version": "0.1.4",
  "description": "An addition to morphdom for restoring elements to original state",
  "author": "Ryan Macdonald <hi@ryanmacdonald.ca>",
  "repository": "git@github.com:macdonaldr93/morphel.git",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/morphel.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsdx build",
    "commit": "cz",
    "lint": "tsdx lint",
    "prepare": "husky install && tsdx build",
    "push": "git push --follow-tags",
    "release": "standard-version",
    "size": "size-limit",
    "start": "tsdx watch",
    "test": "jest"
  },
  "dependencies": {
    "morphdom": "^2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/jest": "^29.5.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "size-limit": "^8.2.4",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.2",
    "typescript": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/morphel.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/morphel.esm.js",
      "limit": "10 KB"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
